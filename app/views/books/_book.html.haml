%tr
  %td= link_to book.title, book_path(book)
  %td= book.description
  %td{align: 'center'}= book.status
  %td= link_to t('edit'), edit_book_path(book), class: 'btn btn-sm btn-secondary'
  %td= link_to t('destroy'), book, method: :delete, data: { confirm: t('are_you_sure') }, class: 'btn btn-sm btn-danger'
  %td{align: 'center'}= book.loan_return_url(current_user)
